@model List<ResultProductDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="chart-box">
				<h4>Product List</h4>
				<div class="bs-example" data-example-id="simple-table">
					<table class="table">
						<thead>
							<tr>
								<th>#</th>
								<th>Product Name</th>
								<th>Product Image</th>
								<th>Price</th>
								<th>Delete</th>
								<th>Update</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th scope="row">@count</th>
									<td>@item.ProductName</td>
									<td>
										@if (!string.IsNullOrEmpty(item.ImageUrl))
										{
											<img src="@item.ImageUrl" alt="@item.ProductName" style="width: 80px; height: 60px; object-fit: cover; border-radius: 4px;" />
										}
										else
										{
											<span class="text-muted">No Image</span>
										}
									</td>
									<td>@item.Price</td>
									<td><a asp-area="Admin" asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.ProductId" class="btn btn-danger">Delete</a></td>
									<td><a asp-area="Admin" asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.ProductId" class="btn btn-warning">Update</a></td>
								</tr>
							}
						</tbody>
					</table>

					<a asp-area="Admin" asp-controller="Product" asp-action="CreateProduct" class="btn btn-success">
						Add New Product
					</a>
				</div>
			</div>
		</div>
	</div>
</section>
