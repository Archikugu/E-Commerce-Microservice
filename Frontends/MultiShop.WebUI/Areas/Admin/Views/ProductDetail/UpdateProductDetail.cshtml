@using MultiShop.WebUI.Dtos.CatalogDtos.ProductDetailDtos
@model UpdateProductDetailDto
@{
    ViewData["Title"] = "UpdateProductDetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Update Product Detail</h4>

                <form asp-area="Admin" asp-controller="ProductDetail" asp-action="UpdateProductDetail" method="post">
                    <input type="hidden" asp-for="ProductDetailId" />

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label>Product</label>
                        @Html.DropDownListFor(x => x.ProductId, (List<SelectListItem>)ViewBag.Products, new { @style = "padding:0;", @class = "form-control" })
                        <br />
                        <label>Description</label>
                        <textarea class="form-control" asp-for="Description" rows="5"></textarea>
                        <br />
                        <label>Info</label>
                        <textarea class="form-control" asp-for="Info" rows="5"></textarea>
                        <br />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-warning">Update Product Detail</button>
                        <a asp-area="Admin" asp-controller="ProductDetail" asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
