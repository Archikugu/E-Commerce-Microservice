@using MultiShop.WebUI.Dtos.CatalogDtos.ProductDetailDtos
@using MultiShop.WebUI.Dtos.CatalogDtos.ProductDtos
@model List<ResultProductDetailDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
	var products = ViewBag.Products as List<ResultProductDto>;
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="chart-box">
				<h4>Product Detail List</h4>
				<div class="bs-example" data-example-id="simple-table">
					<table class="table">
						<thead>
							<tr>
								<th>#</th>
								<th>Product Detail ID</th>
								<th>Product Name</th>
								<th>Description</th>
								<th>Info</th>
								<th>Product ID</th>
								<th>Delete</th>
								<th>Update</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th scope="row">@count</th>
									<td>@item.ProductDetailId</td>
									<td>@(products?.FirstOrDefault(p => p.ProductId == item.ProductId)?.ProductName ?? "N/A")</td>
									<td>@item.Description</td>
									<td>@item.Info</td>
									<td>@item.ProductId</td>
									<td><a asp-area="Admin" asp-controller="ProductDetail" asp-action="DeleteProductDetail" asp-route-id="@item.ProductDetailId" class="btn btn-danger">Delete</a></td>
									<td><a asp-area="Admin" asp-controller="ProductDetail" asp-action="UpdateProductDetail" asp-route-id="@item.ProductDetailId" class="btn btn-warning">Update</a></td>
								</tr>
							}
						</tbody>
					</table>

					<a asp-area="Admin" asp-controller="ProductDetail" asp-action="CreateProductDetail" class="btn btn-success">
						Add New Product Detail
					</a>
				</div>
			</div>
		</div>
	</div>
</section>
