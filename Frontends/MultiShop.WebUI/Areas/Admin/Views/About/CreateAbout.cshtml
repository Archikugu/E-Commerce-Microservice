@using MultiShop.WebUI.Dtos.CatalogDtos.AboutDtos
@model CreateAboutDto

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>About Creation Page</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" class="form-control" asp-for="Title" placeholder="Enter title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label>Description</label>
                            <textarea class="form-control" asp-for="Description" rows="4" placeholder="Enter description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label>Image Url</label>
                            <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Enter image url" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" class="form-control" asp-for="Address" placeholder="Enter address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label>Phone</label>
                            <input type="text" class="form-control" asp-for="Phone" placeholder="Enter phone number" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" asp-for="Email" placeholder="Enter email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label>Working Hours</label>
                            <input type="text" class="form-control" asp-for="WorkingHours" placeholder="Enter working hours" />
                            <span asp-validation-for="WorkingHours" class="text-danger"></span>
                        </div>
                        <br />
                        <button class="btn btn-success">Add About</button>
                        <a asp-area="Admin" asp-controller="About" asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section> 