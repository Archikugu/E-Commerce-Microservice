@model List<MultiShop.WebUI.Dtos.DiscountDtos.DiscountCouponDtos.ResultDiscountCouponDto>

<div class="container-fluid">
	<div class="row mb-3">
		<div class="col-12 d-flex justify-content-between align-items-center">
			<h4 class="mb-0">Discount Coupon List</h4>
			<a class="btn btn-primary" href="/Admin/Discount/Create">Create Coupon</a>
		</div>
	</div>

	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>#</th>
				<th>Code</th>
				<th>Rate (%)</th>
				<th>Active</th>
				<th>Valid Date</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null && Model.Any())
			{
				var i = 1;
				foreach (var item in Model)
				{
					<tr>
						<td>@i</td>
						<td>@item.Code</td>
						<td>@item.Rate</td>
						<td>
							@if (item.IsActive)
							{
								<span class="badge badge-success">Active</span>
							}
							else
							{
								<span class="badge badge-secondary">Inactive</span>
							}
						</td>
						<td>@item.ValidDate.ToString("yyyy-MM-dd")</td>
						<td>
							<a class="btn btn-sm btn-warning" href="/Admin/Discount/Update?id=@item.CouponId">Edit</a>
							<a class="btn btn-sm btn-danger" href="/Admin/Discount/Delete?id=@item.CouponId">Delete</a>
						</td>
					</tr>
					i++;
				}
			}
			else
			{
				<tr>
					<td colspan="6" class="text-center">No discount coupons found.</td>
				</tr>
			}
		</tbody>
	</table>
</div>


