@model MultiShop.WebUI.Dtos.DiscountDtos.DiscountCouponDtos.UpdateDiscountCouponDto

<div class="container-fluid">
	<h4 class="mb-3">Update Discount Coupon</h4>
	<form asp-area="Admin" asp-controller="Discount" asp-action="Update" method="post">
		<input type="hidden" asp-for="CouponId" />
		<div class="form-group">
			<label>Code</label>
			<input asp-for="Code" class="form-control" />
		</div>
		<div class="form-group">
			<label>Rate (%)</label>
			<input asp-for="Rate" type="number" class="form-control" />
		</div>
		<div class="form-group form-check">
			<input asp-for="IsActive" class="form-check-input" type="checkbox" />
			<label class="form-check-label" for="IsActive">Active</label>
		</div>
		<div class="form-group">
			<label>Valid Date</label>
			<input asp-for="ValidDate" type="date" class="form-control" />
		</div>
		<button type="submit" class="btn btn-primary">Update</button>
		<a href="/Admin/Discount" class="btn btn-secondary">Cancel</a>
	</form>
</div>


