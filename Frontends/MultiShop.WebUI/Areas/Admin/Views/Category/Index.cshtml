@using MultiShop.WebUI.Dtos.CatalogDtos.CategoryDtos
@model List<ResultCategoryDto>

@{
	ViewData["Title"] = "Category List";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="chart-box">
				<h4>Category List</h4>
				<p>This table displays all existing categories in the system. You can view products within each category, update category details, or remove categories as needed.</p>

				<div class="bs-example" data-example-id="simple-table">
					<table class="table">
						<thead>
							<tr>
								<th>#</th>
								<th>Category Name</th>
								<th>Image</th>
								<th>Products in This Category</th>
								<th>Delete</th>
								<th>Update</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th scope="row">@count</th>
									<td>@item.CategoryName</td>
									<td>
										@if (!string.IsNullOrEmpty(item.ImageUrl))
										{
											<img src="@item.ImageUrl" alt="@item.CategoryName" style="width: 80px; height: 60px; object-fit: cover; border-radius: 4px;" />
										}
										else
										{
											<span class="text-muted">No Image</span>
										}
									</td>
									<td><a asp-area="Admin" asp-controller="Category" asp-action="ViewProducts" asp-route-id="@item.CategoryId" class="btn btn-primary">View Products</a></td>
									<td><a asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.CategoryId" class="btn btn-danger">Delete</a></td>
									<td><a asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.CategoryId" class="btn btn-warning">Update</a></td>
								</tr>
							}
						</tbody>
					</table>

					<a asp-area="Admin" asp-controller="Category" asp-action="CreateCategory" class="btn btn-success">
						Add New Category
					</a>
				</div>
			</div>
		</div>
	</div>
</section>
