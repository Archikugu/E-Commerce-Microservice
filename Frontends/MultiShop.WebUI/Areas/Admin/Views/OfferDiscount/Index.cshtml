@using MultiShop.WebUI.Dtos.CatalogDtos.OfferDiscountsDtos
@model List<ResultOfferDiscountDto>
@{
	ViewData["Title"] = "Discount Offer Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="chart-box">
				<h4>Offer Discount List</h4>
				<div class="bs-example" data-example-id="simple-table">
					<table class="table">
						<thead>
							<tr>
								<th>#</th>
								<th>Offer Discount Title</th>
								<th>Offer Discount SubTitle</th>
								<th>Image</th>
								<th>Delete</th>
								<th>Update</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th scope="row">@count</th>
									<td>@item.Title</td>
									<td>@item.SubTitle</td>
									<td>
										@if (!string.IsNullOrEmpty(item.ImageUrl))
										{
											<img src="@item.ImageUrl" alt="@item.Title" style="width: 80px; height: 60px; object-fit: cover; border-radius: 4px;" />
										}
										else
										{
											<span class="text-muted">No Image</span>
										}
									</td>
									<td><a asp-area="Admin" asp-controller="OfferDiscount" asp-action="DeleteOfferDiscount" asp-route-id="@item.OfferDiscountId" class="btn btn-danger">Delete</a></td>
									<td><a asp-area="Admin" asp-controller="OfferDiscount" asp-action="UpdateOfferDiscount" asp-route-id="@item.OfferDiscountId" class="btn btn-warning">Update</a></td>
								</tr>
							}
						</tbody>
					</table>

					<a asp-area="Admin" asp-controller="OfferDiscount" asp-action="CreateOfferDiscount" class="btn btn-success">
						Add New OfferDiscount
					</a>
				</div>
			</div>
		</div>
	</div>
</section>
