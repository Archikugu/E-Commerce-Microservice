@using MultiShop.WebUI.Dtos.CatalogDtos.FeatureDtos
@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Feature Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="chart-box">
				<h4>Feature List</h4>
				<div class="bs-example" data-example-id="simple-table">
					<table class="table">
						<thead>
							<tr>
								<th>#</th>
								<th>Feature Title</th>
								<th>Delete</th>
								<th>Update</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th scope="row">@count</th>
									<td>@item.Title</td>
									<td><a asp-area="Admin" asp-controller="Feature" asp-action="DeleteFeature" asp-route-id="@item.FeatureId" class="btn btn-danger">Delete</a></td>
									<td><a asp-area="Admin" asp-controller="Feature" asp-action="UpdateFeature" asp-route-id="@item.FeatureId" class="btn btn-warning">Update</a></td>
								</tr>
							}
						</tbody>
					</table>

					<a asp-area="Admin" asp-controller="Feature" asp-action="CreateFeature" class="btn btn-success">
						Add New Feature
					</a>
				</div>
			</div>
		</div>
	</div>
</section>


