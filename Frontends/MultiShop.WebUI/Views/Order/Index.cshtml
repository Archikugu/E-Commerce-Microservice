@model MultiShop.WebUI.Dtos.OrderDtos.OrderAddressDtos.CreateOrderAddressDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/Home/Index">Home</a>
                <a class="breadcrumb-item text-dark" href="/Order/Index">Order</a>
                <span class="breadcrumb-item active">Checkout</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- Checkout Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        @await Component.InvokeAsync("OrderDetail", Model)
        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Order Summary</span></h5>
            @await Component.InvokeAsync("OrderSummary")
            <div class="mb-5">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Payment</span></h5>
                @await Component.InvokeAsync("PaymentMethod")
            </div>
        </div>
    </div>
</div>
<!-- Checkout End -->