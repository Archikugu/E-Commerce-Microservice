@model MultiShop.WebUI.Dtos.CatalogDtos.ContactDtos.CreateContactDto

<!--Contact Section View Components-->

<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Contact Us</span></h2>
    <div class="row px-xl-5">
        <div class="col-lg-6 mb-5">
            <div class="contact-form bg-light p-30">
                <div id="success"></div>
                <form method="post" asp-controller="Contact" asp-action="Index">
                    <div class="control-group mb-3">
                        <input type="text" class="form-control" id="name" name="Name" placeholder="Your Name"
                               required asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="control-group mb-3">
                        <input type="email" class="form-control" id="email" name="Email" placeholder="Your Email"
                               required asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="control-group mb-3">
                        <input type="text" class="form-control" id="subject" name="Subject" placeholder="Subject"
                               required asp-for="Subject" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="control-group mb-3">
                        <input type="text" class="form-control" id="phone" name="Phone" placeholder="Phone Number" asp-for="Phone" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="control-group mb-3">
                        <textarea class="form-control" rows="8" id="message" name="Message" placeholder="Message"
                                  required asp-for="Message"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div>
                        <button class="btn btn-primary py-2 px-4" type="submit">
                            Send Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-6 mb-5">
            <div class="bg-light p-30 mb-30">
                <iframe style="width: 100%; height: 250px;"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d195884.0589256048!2d32.6225389!3d39.9333633!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d347d520732db1%3A0xbdc57b0c0842b8d!2sAnkara%2C%20Turkey!5e0!3m2!1sen!2s!4v1703123456789!5m2!1sen!2s"
                        frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
            <div class="bg-light p-30 mb-3">
                <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>Kızılay, Ankara, Turkey</p>
                <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>info@multishop.com</p>
                <p class="mb-2"><i class="fa fa-phone-alt text-primary mr-3"></i>+90 312 123 4567</p>
            </div>
        </div>
    </div>
</div>