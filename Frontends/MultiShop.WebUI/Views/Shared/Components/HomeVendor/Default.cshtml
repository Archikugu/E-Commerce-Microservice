@using MultiShop.WebUI.Dtos.CatalogDtos.BrandDtos
@model List<ResultBrandDto>

<!-- Vendor Start -->
<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel vendor-carousel">
              
                    @foreach (var brand in Model)
                    {
                        <div class="bg-light p-4">
                            @if (!string.IsNullOrEmpty(brand.ImageUrl))
                            {
                                <img src="@brand.ImageUrl" alt="@brand.BrandName" style="max-width: 100%; height: auto;">
                            }
                            else
                            {
                                <img src="~/MultiShopTemplate/img/vendor-default.jpg" alt="@brand.BrandName" style="max-width: 100%; height: auto;">
                            }
                        </div>
                    }    
            </div>
        </div>
    </div>
</div>
<!-- Vendor End -->
