@using MultiShop.WebUI.Dtos.CatalogDtos.ProductDtos
@model List<ResultProductsWithCategoryDto>

<!-- Product List Component Default View -->

@if (Model != null && Model.Any())
{
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-6 pb-1">
            <div class="product-item bg-light mb-4">
                <div class="product-img position-relative overflow-hidden">
                    <img class="img-fluid w-100" src="@item.ImageUrl" alt="@item.ProductName">
                    <div class="product-action">
                        <a class="btn btn-outline-dark btn-square" href="/Basket/AddBasketItem/@item.ProductId"><i class="fa fa-shopping-cart"></i></a>
                        <a class="btn btn-outline-dark btn-square" href=""><i class="far fa-heart"></i></a>
                        <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i></a>
                        <a class="btn btn-outline-dark btn-square" href="@Url.Action("ProductDetail", "ProductList", new { id = item.ProductId })"><i class="fa fa-search"></i></a>
                    </div>
                </div>
                <div class="text-center py-4">
                    <a class="h6 text-decoration-none text-truncate" href="@Url.Action("ProductDetail", "ProductList", new { id = item.ProductId })">@item.ProductName</a>
                    <div class="d-flex align-items-center justify-content-center mt-2">
                        <h5>$@item.Price.ToString("F2")</h5><h6 class="text-muted ml-2"><del>$@{decimal originalPrice = item.Price * 100 / 85; }@originalPrice.ToString("F2")</del></h6>
                    </div>
                    <div class="d-flex align-items-center justify-content-center mb-1">
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small>(99)</small>
                    </div>
                    @if (item.Category != null)
                    {
                        <small class="text-muted">@item.Category.CategoryName</small>
                    }
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col-12">
        <div class="text-center py-5">
            <h4 class="text-muted">No products found yet.</h4>
        </div>
    </div>
}