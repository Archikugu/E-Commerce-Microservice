@using MultiShop.WebUI.Dtos.CatalogDtos.ProductDetailDtos
@model ResultProductDetailDto
<div class="tab-pane fade show active" id="tab-pane-2">
    <h4 class="mb-3">Additional Information</h4>
    @if (Model != null && !string.IsNullOrEmpty(Model.Info))
    {
        <p>@Model.Info</p>
    }
    else
    {
        <p class="text-muted">No additional information available.</p>
    }
</div>